                                    var value = jQuery(li).find('a').text().trim();
                                    jQuery('[id$=\":' + inputId + '\"]').val(value);
                                    var $menu = jQuery('[id$=\":' + menuId + '\"]');
                                    $menu.css('display', 'none');
                                }
                            }

                            function addJsToMenu(menuId, inputId) {
