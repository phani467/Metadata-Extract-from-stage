        <script>
            jQuery.noConflict();
            jQuery(function() {
                jQuery('div#attachFile').dialog({
                    modal: true,
                    width: 600,
                    height: 515,
                    autoOpen: false,
                    resizable: false
                });
                enableButtons($getSendBtn());
