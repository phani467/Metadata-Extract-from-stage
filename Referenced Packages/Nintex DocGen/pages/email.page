                                        $leMsgsDiv.remove();
                                    }
                                    sforce.one.navigateToSObject("{!JSENCODE(recordId)}");
                                }
                            };

                            function formatLookup(lookupId, lookupDivId, lookupLabelId, lookupMenu, lookupMenuFunction) {
                                var newLookup = jQuery('[id$=\":' + lookupId + '\"]');
                                var newLookupDiv = jQuery('[id$=\":' + lookupDivId + '\"]');
                                var newLookupLabel = jQuery('#' + lookupLabelId);
                                var newLookupTop = jQuery('[id$=\":' + lookupId + '_top\"]');
                                var select = newLookupTop.find('select');
                                var hiddenInputs = newLookupTop.find('input[type=\"hidden\"]');
                                var lookupSpan = newLookupTop.find('span');
                                var input = lookupSpan.find('input');
                                var table = jQuery('<table><tr><td colspan="2">' + newLookupLabel[0].outerHTML + '</td></tr>' +
                                                   '<tr><td style="width: 30%;padding-right: 12px;"><div id="selectReplaceDiv"/></td><td style="position: relative;"><div id="inputReplaceDiv"></td></tr></table>');
                                table.find('div#selectReplaceDiv').replaceWith(select);
                                table.find('div#inputReplaceDiv').replaceWith(lookupSpan);
                                select.after(hiddenInputs);
                                newLookupDiv.after(table);
                                newLookupDiv.remove();
                                var lookupMenu = jQuery('[id$=\":' + lookupMenu + '\"]');
                                lookupMenu = lookupMenu.remove();
                                lookupSpan.after(lookupMenu);
                                // Styling
                                newLookup.addClass('slds-input');
                                select.addClass('slds-select');

                                var a = lookupSpan.find('a');
                                a.attr('href', '');
                                var searchIcon = jQuery('<div class="slds-input-has-icon slds-input-has-icon--right">' +
                                                        '<svg aria-hidden="true" class="slds-input__icon">' +
                                                        '<use xlink:href={!URLFOR($Resource.SalesforceLightning, "/assets/icons/utility-sprite/svg/symbols.svg#search")}></use>' +
                                                        '</svg>' +
                                                        '</div>');
                                searchIcon.css('position', 'inherit');
                                a.html(searchIcon);

                                // query record on click or enter
                                function queryRecords() {
                                    var objectType = select.find('option:selected').text();
                                    var searchString = input.val();
                                    lookupMenuFunction(objectType, searchString);
                                }
                                a.click(function(event) {
                                    event.preventDefault();
                                    queryRecords();
                                });
                                newLookup.keydown(function(event) {
                                    if (event.which == 13) {
                                        event.preventDefault();
                                        queryRecords();
                                    }
                                });
                            }

                            function setLookupValue(li, inputId, menuId) {
