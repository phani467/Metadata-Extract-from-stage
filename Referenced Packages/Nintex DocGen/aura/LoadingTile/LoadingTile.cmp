<aura:component >
    <!-- Optional Attributes -->
    <aura:attribute name="class" type="string" default=""/>
    
	<div class="slds">
        <div class="{!v.class}">
            <ul class="slds-list--vertical slds-has-cards slds-has-cards--space slds-has-list-interactions" style="background-color: #EEF1F6;padding: .5rem 1rem;">
                <li>
                    <div style="width: 100%; text-align: center;">
                        <Loop:Spinner class="slds-spinner--small" visible="true" useGraySpinner="true"/>
                        <span style="color: grey;margin-left: 10px;">Loading records...</span>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</aura:component>