<aura:component implements="lightning:actionOverride,force:hasRecordId,force:hasSObjectName,force:lightningQuickAction" 
                controller="CreateOpportunityAttachmentController">
    <aura:attribute name="opportunityRecord" type="Opportunity"/>
    <aura:attribute name="error" type="String" />
    <aura:attribute name="recordId" type="String" />

    <force:recordData aura:id="forceRecord"
                      recordId="{!v.recordId}"
                      layoutType="FULL"
                      targetFields="{!v.opportunityRecord}"
                      mode="EDIT" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />	
</aura:component>